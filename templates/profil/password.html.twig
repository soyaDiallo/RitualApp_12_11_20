{% block profile_content_body %}
	<!--begin::Content-->
	<div class="flex-row-fluid ml-lg-8">
		{{ form_start(form, {'attr': { 'class': 'form' }}) }}

		<!--begin::Card-->
		<div
			class="card card-custom">
			<!--begin::Header-->
			<div class="card-header py-3">
				<div class="card-title align-items-start flex-column">
					<h3 class="card-label font-weight-bolder text-dark">Changer Mot de passe</h3>
					<span class="text-muted font-weight-bold font-size-sm mt-1">Modifier le mot de passe de votre compte</span>
				</div>
				<div class="card-toolbar">
					<button type="submit" class="btn btn-primary font-weight-bolder mr-2">Enregistrer</button>
					<button type="reset" class="btn btn-light-primary font-weight-bolder">Annuler</button>
				</div>
			</div>
			<!--end::Header-->
			<!--begin::Form-->
			<form class="form">
				<div
					class="card-body">
					<!--begin::Alert-->
					<div class="alert alert-custom alert-light-danger fade show mb-10" role="alert">
						<div class="alert-icon">
							<span
								class="svg-icon svg-icon-3x svg-icon-danger">
								<!--begin::Svg Icon | path:/keen/theme/demo6/dist/assets/media/svg/icons/Code/Info-circle.svg-->
								<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewbox="0 0 24 24" version="1.1">
									<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
										<rect x="0" y="0" width="24" height="24"/>
										<circle fill="#000000" opacity="0.3" cx="12" cy="12" r="10"/>
										<rect fill="#000000" x="11" y="10" width="2" height="7" rx="1"/>
										<rect fill="#000000" x="11" y="7" width="2" height="2" rx="1"/>
									</g>
								</svg>
								<!--end::Svg Icon-->
							</span>
						</div>
						<div class="alert-text font-weight-bold">
							<strong>Attention</strong>: La modification du mot de passe est définitive.
						</br>Si vous avez oublié votre mot de passe actuel, adressez-vous à l'administrateur.</div>
					<div class="alert-close">
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">
								<i class="ki ki-close"></i>
							</span>
						</button>
					</div>
				</div>
				<!--end::Alert-->
				<div class="form-group row">
					<label class="col-xl-3 col-lg-3 col-form-label text-alert text-right">Mot de passe actuel</label>
					<div class="col-lg-9 col-xl-6">
						{{ form_widget(form.oldPassword, {'attr': {'class': 'form-control form-control-lg form-control-solid mb-2', 'placeholder': 'Mot de passe actuel'}}) }}
						{# <span class="form-text text-danger">{{ form_errors(form.oldPassword) }}</span>
						{% for flashError in app.flashes('error') %}
							<span class="form-text text-danger">{{ flashError }}</span>
						{% endfor %}

						{% if not form_errors(form.oldPassword) %}
							<span class="form-text text-muted">Entrer le mot de passe actuel, celui que vous voulez changer.</span>
						{% endif %} #}

						{# <input type="password" class="form-control form-control-lg form-control-solid mb-2" placeholder="Mot de passe actuel"/>
																								<span class="form-text text-muted">Entrer le mot de passe actuel, celui que vous voulez changer.</span> #}
					</div>
				</div>
				<div class="form-group row">
					<label class="col-xl-3 col-lg-3 col-form-label text-alert text-right">Nouveau Mot de passe</label>
					<div class="col-lg-9 col-xl-6">
						{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control form-control-lg form-control-solid', 'placeholder': 'Nouveau mot de passe'}}) }}
						<span class="form-text text-danger">{{ form_errors(form.plainPassword.first) }}</span>
						{% if not form_errors(form.plainPassword.first) %}
							<span class="form-text text-muted">Entrer le nouveau mot de passe.</span>
						{% endif %}

						{# <input type="password" class="form-control form-control-lg form-control-solid" placeholder="Nouveau mot de passe"/>
																								<span class="form-text text-muted">Entrer le nouveau mot de passe.</span> #}
					</div>
				</div>
				<div class="form-group row">
					<label class="col-xl-3 col-lg-3 col-form-label text-alert text-right">Confirmation Mot de passe</label>
					<div class="col-lg-9 col-xl-6">
						{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control form-control-lg form-control-solid', 'placeholder': 'Répéter le nouveau mot de passe'}}) }}
						<span class="form-text text-danger">{{ form_errors(form.plainPassword.second) }}</span>
						{# <input type="password" class="form-control form-control-lg form-control-solid" placeholder="Répéter le nouveau mot de passe"/> #}
					</div>
				</div>
			</div>
		</form>
		<!--end::Form-->

		{{ form_end(form) }}
	</div>
</div>
<!--end::Content-->{% endblock %}
