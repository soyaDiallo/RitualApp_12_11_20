{% block profile_content_body %}
	<!--begin::Content-->
	<div class="flex-row-fluid ml-lg-8">
		{{ form_start(form, {'attr': { 'class': 'form' }}) }}
		<!--begin::Card-->
		<div
			class="card card-custom">
			<!--begin::Header-->
			<div class="card-header py-3">
				<div class="card-title align-items-start flex-column">
					<h3 class="card-label font-weight-bolder text-dark">Informations du compte</h3>
					<span class="text-muted font-weight-bold font-size-sm mt-1">Modifier les informations de votre compte</span>
				</div>
				<div class="card-toolbar">
					<button type="submit" class="btn btn-primary font-weight-bolder mr-2">Enregistrer</button>
					<button type="reset" class="btn btn-light-primary font-weight-bolder">Annuler</button>
				</div>
			</div>
			<!--end::Header-->

			<!--begin::Form-->
			<div class="card-body">
				{% for message in app.flashes('error') %}
					<div class="alert alert-custom alert-outline-2x alert-outline-danger fade show mb-5" role="alert">
						<div class="alert-icon">
							<span
								class="svg-icon svg-icon-3x svg-icon-danger">
								<!--begin::Svg Icon | path:/keen/theme/demo6/dist/assets/media/svg/icons/Code/Info-circle.svg-->
								<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewbox="0 0 24 24" version="1.1">
									<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
										<rect x="0" y="0" width="24" height="24"/>
										<circle fill="#000000" opacity="0.3" cx="12" cy="12" r="10"/>
										<rect fill="#000000" x="11" y="10" width="2" height="7" rx="1"/>
										<rect fill="#000000" x="11" y="7" width="2" height="2" rx="1"/>
									</g>
								</svg>
								<!--end::Svg Icon-->
							</span>
						</div>
						<div class="alert-text">{{ message }}</div>
						<div class="alert-close">
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">
									<i class="ki ki-close"></i>
								</span>
							</button>
						</div>
					</div>
				{% endfor %}

				<!--begin::Alert-->
				<div class="alert alert-custom alert-light-danger fade show mb-10" role="alert">
					<div class="alert-icon">
						<span
							class="svg-icon svg-icon-3x svg-icon-danger">
							<!--begin::Svg Icon | path:/keen/theme/demo6/dist/assets/media/svg/icons/Code/Info-circle.svg-->
							<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewbox="0 0 24 24" version="1.1">
								<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
									<rect x="0" y="0" width="24" height="24"/>
									<circle fill="#000000" opacity="0.3" cx="12" cy="12" r="10"/>
									<rect fill="#000000" x="11" y="10" width="2" height="7" rx="1"/>
									<rect fill="#000000" x="11" y="7" width="2" height="2" rx="1"/>
								</g>
							</svg>
							<!--end::Svg Icon-->
						</span>
					</div>

					<div class="alert-text font-weight-bold">
						<strong>Attention</strong>: La modification de l'Email ou du Mot de passe est d√©finitive.
					</div>
					<div class="alert-close">
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">
								<i class="ki ki-close"></i>
							</span>
						</button>
					</div>
				</div>
				<!--end::Alert-->

				<div class="row">
					<label class="col-xl-3"></label>
					<div class="col-lg-9 col-xl-6">
						<h5 class="font-weight-bold mb-6">Changer Email</h5>
					</div>
				</div>

				<!--begin::Form Group-->
				<div class="form-group row">
					<label class="col-xl-3 col-lg-3 col-form-label text-right">Adresse Email</label>
					<div class="col-lg-9 col-xl-6">
						<div class="input-group input-group-lg input-group-solid">
							<div class="input-group-prepend">
								<span class="input-group-text">
									<i class="la la-at"></i>
								</span>
							</div>
							{{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg form-control-solid', 'placeholder': 'Nouvelle Adresse Email'}}) }}
						</div>
						<span class="form-text text-danger">{{ form_errors(form.email) }}</span>
						{% if not form_errors(form.email) %}
							<span class="form-text text-muted">Donner le nouvelle adresse Email du compte.</span>
						{% endif %}
					</div>
				</div>
				<!--end::Form Group-->

				<div class="row">
					<label class="col-xl-3"></label>
					<div class="col-lg-9 col-xl-6">
						<h5 class="font-weight-bold mt-10 mb-6">Changer Mot de passe</h5>
					</div>
				</div>

				<!--begin::Form Group-->
				<div class="form-group row">
					<label class="col-xl-3 col-lg-3 col-form-label text-alert text-right">Mot de passe actuel</label>
					<div class="col-lg-9 col-xl-6">
						{{ form_widget(form.oldPassword, {'attr': {'class': 'form-control form-control-lg form-control-solid mb-2', 'placeholder': 'Mot de passe actuel'}}) }}
					</div>
				</div>
				<!--end::Form Group-->

				<!--begin::Form Group-->
				<div class="form-group row">
					<label class="col-xl-3 col-lg-3 col-form-label text-alert text-right">Nouveau Mot de passe</label>
					<div class="col-lg-9 col-xl-6">
						{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control form-control-lg form-control-solid', 'placeholder': 'Nouveau mot de passe'}}) }}
						<span class="form-text text-danger">{{ form_errors(form.plainPassword.first) }}</span>
						{% if not form_errors(form.plainPassword.first) %}
							<span class="form-text text-muted">Entrer le nouveau mot de passe.</span>
						{% endif %}
					</div>
				</div>
				<!--end::Form Group-->

				<!--begin::Form Group-->
				<div class="form-group row">
					<label class="col-xl-3 col-lg-3 col-form-label text-alert text-right">Confirmation Mot de passe</label>
					<div class="col-lg-9 col-xl-6">
						{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control form-control-lg form-control-solid', 'placeholder': 'R√©p√©ter le nouveau mot de passe'}}) }}
						<span class="form-text text-danger">{{ form_errors(form.plainPassword.second) }}</span>
					</div>
				</div>
				<!--end::Form Group-->
			</div>
			<!--end::Form-->
		</div>
		<!--end::Card-->
		{{ form_end(form) }}
	</div>
	<!--end::Content-->
{% endblock %}
